  <link rel="stylesheet" href="/stylesheets/style.css">
<section>
    <div class="login-container d-flex align-items-center justify-content-center">
        <form action="/admin/login" method="post" class="login-form text-center">
        {{#if error}}

                <p class="error">{{error}}</p>

                {{/if}}

            <h2 class="mb-5 font-weight-light text-uppercase">Admin</h2>
            <div class="form-group">
                
                <input name="email" type="text" class="form-control rounded-pill form-control-lg success" placeholder="Username">
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control rounded-pill form-control-lg" placeholder="password">
            </div>
            
            <button type="submit" class="btn btn-primary btn-block rounded-pill form-control-lg mt-4" > <a href="#"></a> Login</button>
        </form>
    </div>
</section>